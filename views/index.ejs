<!DOCTYPE html>
<html lang="en">
<head>
       <meta charset="UTF-8">
       <meta name="viewport" content="width=device-width, initial-scale=1.0">
       <link rel="stylesheet" href="styles.css">
       <title>Home</title>
</head>
<body>
       <header class="card-header">
              <nav class="nav-bar">
                     <ul class="list">
                            <li class="list_item"><a href="/">Home</a></li>
                            <% if (!req.headers['cookie']) { %>
                                   <li class="list_item"><a href="/login">login</a></li>
                            <% } else { %> 
                                   <li class="list_item"><a href="/logout">logout</a></li>
                            <% } %>
                     </ul>
              </nav>
       </header>
       <main>
              <section class="block">
                     <header class="block_header">
                            <h2 class="block_heading">Blog-express</h2>
                            <p class="block_paragraph">welcome to My Blog used by express and node.js </p>
                     </header>
                     <div class="block_content">
                            <% users %>
                            <% for( let user of users ) { %>
                                   <% for( let post of user.posts ) { %>
                            <article class=" article-collapse">
                                   <h2 class="article-expanded"><%= post.title %></h2>
                                   <div class="article_content">
                                          <p><%= post.text %></p>
                                          <span style="color: rgb(57, 7, 174);">posted by <%= user.username %></span>
                                   </div>
                                   
                            </article>                                 
                                   <% } %>
                            <% } %>
                     </div>
              </section>
       </main>
       <script>
              const collapse = document.querySelectorAll(".article-collapse");
            collapse.forEach(item => 
            item.addEventListener('click', function() {
            this.classList.toggle('article-expanded')
       })
 )

       </script>
</body>
</html>